{
  "manifest_version": 3,
  "name": "Latex",
  "version": "0.1.0",
  "description": "Create latex equations fast",
  "icons": {
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "permissions": ["storage", "desktopCapture", "tabs", "activeTabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["contentScript.js"],
      "css": ["popup.css"]
    }
  ],
    "web_accessible_resources": [
    {
      "resources": ["test.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
